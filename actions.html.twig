                <div style="width: 500px;margin: 0 auto;text-align: center;">
                    <div class="form-group">
                        <div style="width: 200px;margin: 0 auto;">
                            <select class="form-control" onchange="showForm(this.value)">
                                <option>Action Type</option>
                                <option value="massSeen">Mass Seen</option>
                                <option value="register">Register</option>
                                <option value="vote">Vote</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div style="max-width: 500px; margin: 40px auto;border: 1px solid #424858;border-radius: 10px;padding: 20px;">
                    <!-- Mass Seen Form -->
                    <form id="massSeen" action="#" style="display: none;">
                        <input type="hidden" id="actionType" value="massSeen">
                        <div class="form-group row">
                            <label for="channelName" class="col-sm-4 col-form-label">Channel Name:</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="channelName">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="fromPostID" class="col-sm-4 col-form-label">From post ID</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="fromPostID">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="toPostID" class="col-sm-4 col-form-label">To post ID</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="toPostID">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="count" class="col-sm-4 col-form-label">Count</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="count">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary" style="width: 100%;">Send</button>
                    </form>

                    <!-- Register Form -->
                    <form id="register" action="#" style="display: none;" method="post" enctype="multipart/form-data">
                        <input type="hidden" id="actionType" value="register">
                        <div class="form-group row">
                            <label for="name" class="col-sm-4 col-form-label">Name</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="name">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="family" class="col-sm-4 col-form-label">Family</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="family">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="MSISDN" class="col-sm-4 col-form-label">MSISDN</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="MSISDN">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="IMSI" class="col-sm-4 col-form-label">IMSI</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="IMSI">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="bio" class="col-sm-4 col-form-label">bio</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="bio">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="Photo" class="col-sm-4 col-form-label">Photo</label>
                            <div class="col-sm-8">
                                <div class="dropzone" action="#">
                                    <div class="fallback">
                                        <input name="file" type="file" multiple="multiple">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary" style="width: 100%;">Send</button>
                    </form>

                    <!-- Vote Form -->
                    <form id="vote" action="#" style="display: none;">
                        <input type="hidden" id="actionType" value="vote">
                        <div class="form-group row">
                            <label for="" class="col-sm-4 col-form-label">Channel Name:</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="channelName">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="fromPostID" class="col-sm-4 col-form-label">From post ID</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="fromPostID">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="toPostID" class="col-sm-4 col-form-label">To post ID</label>
