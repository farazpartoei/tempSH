        <!-- App js -->
        <script src="assets/js/app.js"></script>
        <script>
        function showForm(value) {
            console.log(value);
            switch (value) {
                case 'massSeen':
                    console.log('value');
                    $('#register').hide();
                    $('#vote').hide();
                    $('#massSeen').show();
                    break;

                case 'register':
                    $('#massSeen').hide();
                    $('#vote').hide();
                    $('#register').show();
                    break;

                case 'vote':
                    $('#massSeen').hide();
                    $('#register').hide();
                    $('#vote').show();
                    break;
            
                default:
                    $('#massSeen').hide();
                    $('#register').hide();
                    $('#vote').hide();
                    break;
            }
        }
        </script>

